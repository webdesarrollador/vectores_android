<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:height="64dp"
    android:width="64dp"
    android:viewportHeight="600"
    android:viewportWidth="600" >
    <!--Definimos un grupo que luego lo animaremos mediante rotación, defiremos mediante pivotX
    y pivotY el centro de rotación-->
    <group
        android:name="rotationGroup"
        android:pivotX="300.0"
        android:pivotY="300.0"
        android:rotation="90.0" >
        <!--Definimos un path que luego lo animaremos mediante su opacidad-->
        <path
            android:name="triangulo"
            android:fillColor="#ffffff"
            android:pathData="M300,70 l 0,-70 70,70 0,0 -70,70z" />
    </group>
</vector>